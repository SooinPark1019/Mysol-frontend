{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // ✅ 모듈 해석 방식을 'node'로 변경
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // ✅ JSX 변환 설정 변경 (Next.js 공식 추천)
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./.next/types/**/*.ts",
    "./next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules" // ✅ 경로 수정 (앞의 './' 제거)
  ]
}
